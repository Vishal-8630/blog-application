<%- include('../includes/head', {pageTitle: 'Login'}) %>

<link rel="stylesheet" href="/styles/form.css">

</head>
<body>
    <%- include('../includes/nav-header') %>

    <main>
        <h1 class="heading">
            Login
        </h1>

        <% if(sessionData.hasError) { %>
            <div class="error-section">
                <p class="error-para">
                    <%= sessionData.errorMessage %>
                </p>
            </div>            
        <% } %>
        
        <div class="form-section">
            <form action="/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <div>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="btns">
                    <button class="btn">Login</button>
                </div>
            </form>

            <div class="last">
                <p>Don't have account?<a href="/signup" class="btn btn-alt">Create Account</a></p>
            </div>
        </div>
    </main>

<%- include('../includes/footer') %>