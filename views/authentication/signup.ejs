<%- include('../includes/head', {pageTitle: 'Signup'}) %>

<link rel="stylesheet" href="/styles/form.css">

</head>
<body>
    <%- include('../includes/nav-header') %>

    <main>
        <h1 class="heading">
            Create Account
        </h1>

        <% if(sessionData.hasError) { %>
            <div class="error-section">
                <p class="error-para">
                    <%= sessionData.errorMessage %>
                </p>
            </div>            
        <% } %>

        <div class="form-section">
            <form action="/signup" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <div>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
                </div>
                <div>
                    <label for="confirm-email">Confirm E-mail</label>
                    <input type="email" id="confirm-email" name="confirm-email" value="<%= sessionData.confirmEmail %>" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <hr>
                <div>
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname" value="<%= sessionData.fullname %>" required>
                </div>
                <div>
                    <label for="street">Street</label>
                    <input type="text" id="street" name="street" value="<%= sessionData.address.street %>" required>
                </div>
                <div>
                    <label for="postal">Postal Code</label>
                    <input type="text" id="postal" name="postal" value="<%= sessionData.address.postal %>" required>
                </div>
                <div>
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" value="<%= sessionData.address.city %>" required>
                </div>
                
                <div class="btns">
                    <button class="btn">Signup</button>
                </div>
            </form>

            <div class="last">
                <p>Already have account?<a href="/login" class="btn btn-alt">Login</a></p>
            </div>
        </div>
    </main>

<%- include('../includes/footer') %>