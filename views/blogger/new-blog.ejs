<%- include('../includes/head', {pageTitle: 'Create Blog'}) %>

<link rel="stylesheet" href="/styles/create-blog.css">
</head>
<body>
    <%- include('../includes/nav-header') %>

    <main>
        <h1 class="heading">
            Create Blog
        </h1>
        
        <% if(blogSessionData.hasError) { %>
            <div class="error-section">
                <p class="error-para">
                    <%= blogSessionData.errorMessage %>
                </p>
            </div>            
        <% } %>

        <div class="blog-form-section">
            <form action="/blog/post-blog" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <div class="blog-sections">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" maxlength="30" placeholder="Write your title" value="<%= blogSessionData.title %>" required>
                </div>
    
                <div class="blog-sections">
                    <label for="content">Blog</label>
                    <textarea name="content" id="content" rows="10" maxlength="300" placeholder="Write your blog" required><%= blogSessionData.content %></textarea>
                </div>

                <div class="blog-btns">
                    <!-- Need to update -->
                    <button class="btn btn-alt" type="reset">Reset</button>
                    <button class="btn" type="submit">Post</button>
                </div>
            </form>
        </div>
    </main>

<%- include('../includes/footer') %>