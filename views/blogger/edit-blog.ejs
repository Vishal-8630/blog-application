<%- include('../includes/head', {pageTitle: 'Create Blog'}) %>

<link rel="stylesheet" href="/styles/create-blog.css">
</head>
<body>
    <%- include('../includes/nav-header') %>

    <main>
        <h1 class="heading">
            Edit Blog
        </h1>

        <div class="blog-form-section">
            <form action="/blog/<%= blog._id %>/edit" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <div class="blog-sections">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" maxlength="30" placeholder="Write your title" value="<%= blog.title %>" required>
                </div>
    
                <div class="blog-sections">
                    <label for="content">Blog</label>
                    <textarea name="content" id="content" rows="10" maxlength="300" placeholder="Write your blog" required><%= blog.content %></textarea>
                </div>

                <div class="blog-btns">
                    <a href="/<%= blog._id %>/view" class="btn">&lt; Back</a>
                    <button class="btn">Save</button>
                </div>
            </form>
        </div>
    </main>

<%- include('../includes/footer') %>